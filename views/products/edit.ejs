<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/products/edit.css"/>
<%- include('../partials/nav') %>

<main>
  <h1><% title %></h1>
  <div class="form-container">
    <form action="/products/<%= product._id %>?_method=PUT" method="POST">
      <label for="link-input">Image Link:</label>
      <input type="src" name="imageLink" placeholder="image address here... " value="<%= product.imageLink %>">
      <label for="name-input">Meal Name:</label>
      <input type="text" name="mealName" required="true" placeholder="Product name" value="<%= product.mealName %>">
      <label for="description-input">Description:</label>
      <textarea type="text" placeholder="tell us about this item..." cols="18" rows="1" ><%= product.description%></textarea>
      <button class="save-meal-btn" type="submit">Save Meal 🍽️</button>
    </form>
  </div>
</main>

<%- include('../partials/footer') %>