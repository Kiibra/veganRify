<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/products/index.css"/>
<%- include('../partials/nav') %>

<title><%= title %></title>

<h2>All Products</h2>
<div class="products-container">
  <ul>
    <% products.forEach(product => { %>
        <div class="product-card">
          <p> <img src="<%= product.imageLink %>" alt="product image for post"></p>
          <h3><%= product.mealName %> - posted by <img src="<%= product.author.avatar %>" alt="profile image of user"><%= product.author.name %></h2>
          <p><%= product.description %></p>
          <button id="details-button">Details</button>

          <% if (product.author._id.equals(user.profile._id)) { %>
            <form action="/posts/<%= product._id%>?_method=DELETE" method="POST">
              <button>Delete 🗑️</button>
            </form>
            <% } %>
        </div>
    <% }) %>
</ul>
</div>
<%- include('../partials/footer') %>