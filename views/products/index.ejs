<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/products/index.css"/>
<%- include('../partials/nav') %>
<title><%= title %></title>
<h2>All Products</h2>
<div class="products-container">
  <ul>
    <% products.forEach(product => { %>
        <div class="product-card">
          <p> <img src="<%= product.imageLink %>" alt="product image for post"></p>
          <h4><%= product.mealName %> - posted by <img src="<%= product.author.avatar %>" alt="profile image of user"><%= product.author.name %></h4>
          <p><%= product.description %></p>
          <% if (product.author._id.equals(user.profile._id)) { %>
            <form action="/products/<%= product._id%>?_method=DELETE" method="POST">
              <button>Delete ğŸ—‘ï¸</button>
            </form>
          <% } %>
          <a href="/products/<%= product._id %>"><button id="details-button">Details</button></a>
          </div>
    <% }) %>
</ul>
</div>
