<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/products/editComment.css">
<%- include('../partials/nav') %>

<section> 
  <h1>Edit Comment! </h1>
  <div class="comment-form">

    <form action="/products/<%= product._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
      <label>
        Content: 
      <textarea name="content" autocomplete="off" placeholder="comment here..." value="<%= comment.content %>"><%= comment.content %></textarea>
    </label>
      <button class="comment-button" type="submit">Update Comment</button>
    </form>
  </div>
</section>

